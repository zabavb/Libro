@model Client.Models.BookEntities.Book.ManageBookViewModel

<h1>@ViewBag.IsPost ? "Add Book" : "Edit Book"</h1>

<form asp-action="@(ViewBag.IsPost ? "CreateBook" : "UpdateBook")" method="post">
    @if (!ViewBag.IsPost)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div class="form-group">
        <label asp-for="Title"></label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year"></label>
        <input type="number" asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="number" asp-for="Price" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">@ViewBag.IsPost ? "Add" : "Update"</button>
    <a asp-action="GetAllBooks" class="btn btn-secondary">Back</a>
</form>
